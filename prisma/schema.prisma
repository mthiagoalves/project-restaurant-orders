generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Table {
  id     String @id @default(uuid())
  number Int    @unique

  createdAt DateTime @default(now()) @map("created_at")
  updateAt  DateTime @updatedAt @map("updated_at")

  @@map("table")
}

model Product {
  id          String @id @default(uuid())
  name        String @unique
  slug        String
  description String
  price       Float
  order       Int
  image       String

  createdAt DateTime @default(now()) @map("created_at")
  updateAt  DateTime @updatedAt @map("updated_at")

  @@map("product")
}

model User {
  id         String @id @default(uuid())
  name       String
  username   String @unique
  password   String
  user_level String
  image      String

  createdAt DateTime @default(now()) @map("created_at")
  updateAt  DateTime @updatedAt @map("updated_at")

  @@map("user")
}
